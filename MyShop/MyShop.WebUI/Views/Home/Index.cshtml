@model IEnumerable<MyShop.Core.Models.Product>
@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <div class="row" style="margin-top:20px;">
        @foreach (var item in Model)
        {
            <div class="col-md-4 text-center"1>
                <div class="col-md-12">
                    <img src="~/Content/ProductImage/@item.Image" class="img-responsive" />
                </div>
                <div class="col-md-12">
                    <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>
                </div>
                <div class="col-md-12">
                    <p>@item.Description</p>
                </div>
                <div class="col-md-12">
                    <p>@item.Range</p>
                </div>
                <div class="col-md-12">
                    <a class="btn btn-default btn-block" href="#">Add to Basket</a> 
                </div>
            </div>
            
        }
        <div class="clearfix"></div>
    </div>
</div>